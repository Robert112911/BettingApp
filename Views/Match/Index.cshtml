@model IEnumerable<Match>
@{
    ViewData["Title"] = "Index";
}

<div class="containter p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Meciuri</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Match" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Adaug&#259; meci
            </a>
        </div>
    </div>
    <br/>

    @foreach(var obj in Model)
    {
        @if (!(obj.Sport == "Fotbal" || obj.Sport == "Futsal" || obj.Sport == "Handbal" || obj.Sport == "Rugby"))
        {
            <table class="table" style="width:50%">
                <thead>
                    <tr>
                        <th>@obj.Sport</th>
                        <th>1</th>
                        <th>2</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@obj.Name1<br>@obj.Name2</td>
                        <td>@obj.Cota1</td>
                        <td>@obj.Cota2</td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>